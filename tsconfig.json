{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@translations/*": ["translations/*"]
    }

  },
  "include": ["src"]
}